<Window x:Class="loligochi_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loligochi_app"
        mc:Ignorable="d"
        Title="Loligochi" Height="720" Width="1280" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown" Icon="/icon.png">
    <Grid>
        <Grid x:Name="Welcome_Scene" Visibility="Visible">

            <Image x:Name="Lux_Brand" Source="/brand_lux.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="368" Height="404" Margin="0,71,0,0"/>

            <TextBlock x:Name="Welcome_Text" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Copperplate Gothic Bold" Margin="0,554,0,0" Width="1260" FontSize="46" TextAlignment="Center" FontWeight="Bold" Height="90" Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            Welcome to Summoner Rift's Loligochi!
            </TextBlock>

            <TextBlock x:Name="Press_E" TextAlignment="Center" FontSize="36" FontFamily="Copperplate Gothic Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,622,0,0" Foreground="White">
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            Press E
            </TextBlock>

            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/background.jpg_large"/>
            </Grid.Background>
        </Grid>
        <Grid x:Name="Main_Menu_Scene" Visibility="Hidden">
            <Button Content="New game" HorizontalAlignment="Left" Margin="44,70,0,0" VerticalAlignment="Top" Height="40" Width="133" Click="New_Game_Button_Click"/>
            <Button Content="Continue" HorizontalAlignment="Left" Margin="44,140,0,0" VerticalAlignment="Top" Height="40" Width="133" Click="Continue_Game_Button_Click"/>
            <Button Content="Settings" HorizontalAlignment="Left" Margin="44,210,0,0" VerticalAlignment="Top" Height="40" Width="133" Click="Settings_Button_Click"/>
            <Button Content="Credits" HorizontalAlignment="Left" Margin="44,280,0,0" VerticalAlignment="Top" Height="40" Width="133" Click="Credits_Button_Click"/>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="44,350,0,0" VerticalAlignment="Top" Height="40" Width="133" Click="Exit_Button_Click"/>
        </Grid>
    </Grid>
</Window>
